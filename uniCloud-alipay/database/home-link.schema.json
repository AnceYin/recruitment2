{
	"bsonType": "object",
	"required": [
		"title",
		"pictureLink",
		"categoriesType"
	],
	"permission": {
		"read": true,
		"create": false,
		"update": false,
		"delete": false
	},
	"description": "本表用于记录主页各分类中的各元素",
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"title": {
			"title": "标题",
			"description": "首页模块标题",
			"bsonType": "string",
			"trim": "both"
		},
		"pictureLink": {
			"title": "图片链接",
			"bsonType": "file",
			"fileMediaType": "image",
			"description": "轮播图的图片链接"
		},
		"sort": {
			"title": "序号",
			"bsonType": "int",
			"description": "按序号从小到大排序,例：1000"
		},
		"categoriesType": {
			"title": "分类类型",
			"bsonType": "string",
			"description": "分类类型",
			"foreignKey": "home-categories._id",
			"enum": {
				"collection": "home-categories",
				"field": "_id as value, title as text"
			},
			"trim": "both"
		},
		"linkType": {
			"title": "跳转类型",
			"bsonType": "int",
			"description": "跳转类型",
			"defaultValue": 0,
			"enum": [
				{
					"text": "不跳转",
					"value": 0
				},
				{
					"text": "跳转本小程序页面",
					"value": 1
				},
				{
					"text": "跳转其他小程序页面",
					"value": 2
				},
				{
					"text": "跳转公众号文章",
					"value": 3
				},
				{
					"text": "跳转视频号视频",
					"value": 4
				}
			]
		},
		"linkPath": {
			"title": "跳转路径",
			"bsonType": "string",
			"description": "例：\/pages\/index\/index，跳转分类时，此为筛选参数",
			"trim": "both"
		},
		"create_date": {
			"bsonType": "timestamp",
			"description": "创建时间",
			"forceDefaultValue": {
				"$env": "now"
			}
		}
	}
}